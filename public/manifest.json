{
  "manifest_version": 3,
  "name": "PomodoroBlocker",
  "version": "1.0",
  "description": "A simple Pomodoro timer that blocks specified websites while the timer is running.",
  "action": {
    "default_popup": "index.html",
    "default_title": "Open PomodoroBlocker",
    "default_icon": {
      "16": "Logo16.png",
      "48": "Logo48.png",
      "32": "logo32.png",
      "128": "Logo128.png"
    }
  },
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "offscreen"
  ],
  "host_permissions": ["*://*/*"],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "icons": {
    "16": "Logo16.png",
    "48": "Logo48.png",
    "32": "logo32.png",
    "128": "Logo128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
